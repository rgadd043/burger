<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <h1>BURGERZ</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <img src="/assets/images/burger.png" alt="burger">
    </div>
  </div>

<div class="row">
    <div class="col-sm-4">
      <h2>EAT DEEZ BURGZ</h2>

        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="eaten" value="1">
            <button type="submit">Eat</button>
            </form>


          </li>
          {{/unless}}
          {{/each}}
        </ul>
    </div>

  <div class="col-sm-4">
    <h2>Add BurgerZ</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="burger">BurGer NaME:</label>
          <input type="text" id="burger" name="name">
        </div>

        <button type="submit">ADD</button>
      </form>
  </div>


  <div class="col-sm-4">
    <h2>dEVoured Burgies</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="eaten" value="0">
              <button type="submit">Puke it up</button>
            </form>


          </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
